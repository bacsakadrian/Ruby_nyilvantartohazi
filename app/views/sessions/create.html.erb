<h1>Bejelentkezés:</h1>
<fieldset>
    <legend>Bejelentkezés</legend>
    <%= form_tag '/sessions/create', method: :post do %>
        <div>
        <%= label_tag 'username', 'Username' %>
        <%= text_field 'username', '', size:20 %>
        </div>
        <div>
            <%= label_tag 'password', 'Password' %>
            <%= password_field_tag 'password', '', size: 20 %>
        </div>

        <%= submit_tag "Belépés" %>
    <% end %>
</fieldset>